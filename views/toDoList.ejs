<!DOCTYPE html>
<html lang='en'>
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title><%= title %></title>
    <link rel='stylesheet' href='/vendor/bootstrap3.3.2/css/bootstrap.css' />
    <script src='/vendor/jquery/jquery-2.1.3.min.js'></script>
    <script src='/vendor/bootstrap3.3.2/js/bootstrap.min.js'></script>
    <script>
        var tasks = <%- tasks || [] %>;
    </script>
    <script src="/javascripts/list_client.js"></script>
</head>
<body>

<div class='container-fluid'>
    <div class='row'>
        <div class='col-lg-6 col-md-6 col-sm-12 col-xs-12'>
            <p class='lead'></p>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-6 col-md-6 col-sm-12 col-xs-12'>
            <form class='form-inline'>
                <div class='form-group'>
                    <label for='task'>Task</label>
                    <input type='text' class='form-control' id='task' placeholder='Wash Clothes' required>
                    <button id='submitTask' type='button' class='btn btn-primary' data-loading-text='Adding task...' autocomplete='off'>Add Task</button>
                </div>

            </form>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-4 col-md-4 col-sm-12 col-xs-12'>
            <p class='lead' id='msgArea'></p>
        </div>
    </div>

    <div class='row'>
        <div class='col-lg-4 col-md-4 col-sm-12 col-xs-12'>
            <div class='list-group' id='taskList'>
                <a href='#' class='list-group-item active'>
                    <h2>My Task List</h2>
                </a>
            </div>
        </div>
    </div>
</div>
</body>
</html>
